<main class="contenedor contenedor-formularios no-padding">
  <h1><%=pagina%></h1>
  <form method="POST" class="default-form" enctype="multipart/form-data">
    <div class="campo">
      <label for="">Nombre</label>
      <input type="text" name="nombre" placeholder="Nombre Grupo">
    </div>

    <div class="campo descripcion">
      <label for="">Descripción</label>
      <div class="contenedor-editor">
        <input type="hidden" name="descripcion" id="x">
        <trix-editor input="x"></trix-editor>
      </div>
    </div>

    <div class="campo">
      <label for="categoria">Categoría</label>
      <select name="categoria" id="categoria">
        <option value="" selected disabled>-Elegir Opción-</option>
        <%categorias.forEach(categoria=>{%>
          <option value="<%=categoria.id%>"><%=categoria.nombre%></option>
        <%})%>
      </select>
    </div>

    <div class="campo">
      <label for="imagen">Imagen</label>
      <input type="file" name="imagen" id="imagen">
    </div>

    <div class="campo">
      <label for="url">Sitio Web</label>
      <input type="url" name="url" id="url" placeholder="Página Web">
    </div>

    <div class="campo enviar">
      <input type="submit" value="Crear" class="btn btn-rosa">
    </div>
  </form>
</main>