<main class="contenedor contenedor-formularios no-padding">
  <h1><%=pagina%></h1>
  <form method="POST" class="default-form">
    <div class="campo">
      <label for="">Nombre</label>
      <input 
        type="text" name="nombre" 
        placeholder="Nombre Grupo" value="<%=grupo.nombre%>">
    </div>

    <div class="campo descripcion">
      <label for="">Descripción</label>
      <div class="contenedor-editor">
        <input type="hidden" name="descripcion" id="x" value="<%=grupo.descripcion%>">
        <trix-editor input="x"></trix-editor>
      </div>
    </div>

    <div class="campo">
      <label for="categoria">Categoría</label>
      <select name="categoria" id="categoria">
        <option value="" selected disabled>-Elegir Opción-</option>
        <%categorias.forEach(categoria=>{%>
          <option 
            value="<%=categoria.id%>"
            <%=grupo.categoriumId === categoria.id?'selected':''%>>
            <%=categoria.nombre%></option>
        <%})%>
      </select>
    </div>

    <div class="campo">
      <label for="url">Sitio Web</label>
      <input type="url" name="url" id="url" placeholder="Página Web" value="<%=grupo.url%>">
    </div>

    <div class="campo enviar">
      <input type="submit" value="Guardar" class="btn btn-rosa">
    </div>
  </form>
</main>