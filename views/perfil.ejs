<main class="asistentes contenedor">
  <h1><%=pagina%></h1>

  <div class="informacion-usuario">
    <div class="imagen">
      <%if(perfil.imagen){%>
        <img src="/uploads/perfiles/<%=perfil.imagen%>" alt="">
      <%}%>

      <div class="texto">
        <%-perfil.descripcion%>
      </div>
    </div>
  </div><!--informacion-usuario-->

  <div class="grupos-usuario">
    <%if(grupos.length){%>
      <h2>Grupos</h2>

      <ul class="lista-grupos">

        <%grupos.forEach(grupo=>{%>
          <li><div class="imagen">
            <%if(grupo.imagen){%>
              <img src="/uploads/grupos/<%=grupo.imagen%>" alt="">
            <%}else{%>
              <img src="/img/meeti.jpg">
            <%}%>
          </div>

          <div class="texto">
            <a href="/grupos/<%=grupo.id%>">
              <h3><%=grupo.nombre%></h3></a>
          </div>
        
        </li>
        <%})%>

      </ul>
    <%}%>
  </div>
</main>