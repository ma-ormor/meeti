<main class="contenedor">
  <h1><%=pagina%></h1>

  <div class="informacion-grupo">
    <div class="imagen">
      <%if(grupo.imagen){%>
        <img src="/uploads/grupos/<%=grupo.imagen%>">
      <%}else{%>
        <img src="/img/meeti.jpg">
      <%}%></div>

    <div class="texto">
      <%-grupo.descripcion%>

      <%if(grupo.url){%>
        <a 
          href="<%=grupo.url%>" 
          target="_blank"
          class="url">PÃ¡gina Web</a>
      <%}%>

      <%if(meetis.length){%>
        <h2>Siguientes Meeti's</h2>

        <ul class="lista-meetis">

          <%meetis.forEach(meeti=>{%>
            <li><div class="texto">
              <a href="/meeti/<%=meeti.slug%>">
                <h3><%=meeti.titulo%></h3>

                <%moment.locale('es')%>
                <%fecha = `${meeti.fecha} ${meeti.hora}`%>

                <p class="fecha"><%=moment(fecha).format('LLLL')%></p>
              </a>
            </div></li><%})%>

        </ul>
      <%}%>
    </div>
  </div><!--informacion-grupo-->
</main>